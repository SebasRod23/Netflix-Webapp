{
  "scripts": {
    "build": "cd netflix-webapp && yarn run build",
    "install-client": "cd netflix-webapp && yarn install",
    "install-server": "cd netflix-backend && yarn install",
    "heroku-postbuild": "yarn install && (yarn run install-client && yarn run build) & yarn run install-server",
    "server": "cd netflix-backend && yarn start",
    "client": "cd netflix-webapp && yarn start",
    "develop": "yarn npm-run-all --parallel server client ",
    "start": "yarn npm-run-all --parallel server client "
  }, 
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "react-scripts": "^4.0.3",
    "ts-node": "^10.0.0",
    "yarn-run-all": "^3.1.1"
  }
}
